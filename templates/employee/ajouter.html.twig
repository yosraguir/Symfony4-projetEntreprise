{% extends "Employee/layaout.html.twig" %}
{% block title %}
{{parent()}} -Ajouter Emlpoyee
{% endblock %}
{% block job_body %}
    <!-- Main Content -->
	<!-- Bootstrap CSS -->
	
    <div class="main-content">
      <section class="section">
        <div class="section-header">
          <h1>Form Employee</h1>
          <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Formulaire</a></div>
            <div class="breadcrumb-item"><a href="#">Employee</a></div>
            <div class="breadcrumb-item">Form Validation</div>
          </div>
        </div>
        <div class="section-body">
          <div class="row">
            
            <div class="col-12 col-md-6 col-lg-6">
              <div class="card">
                <form class="needs-validation" novalidate method="Post" >
                {{form_start(form)}}
                  <div class="card-header">
                    <h4>Ajouter Employee</h4>
                  </div>
                  <div class="card-body">

                    <div class="form-group row">
                   
                      <div class="col-sm-9">
                     {{ form_row(form.cin, { 'attr': { 'placeholder': 'Cin...' } } ) }}
                       <div class="invalid-feedback">
                          please enter your name?
                        </div>
                      </div>
                    </div>

                     <div class="form-group mb-0 row">
                   
                      <div class="col-sm-9">
                        {{ form_row(form.age, { 'attr': { 'placeholder': 'Age...' } } ) }}
                        <div class="invalid-feedback">
                          please provide message.
                        </div>
                      </div>
                    </div>
                        <div class="form-group mb-0 row">
                    
                      <div class="col-sm-9">
                          {{ form_row(form.team) }}
                        <div class="invalid-feedback">
                          please provide message.
                        </div>
                      </div>
                    </div>
                   
                     <div class="form-group mb-0 row">
                   
                      <div class="col-sm-9">
                          {{ form_row(form.role, { 'attr': { 'placeholder': 'role...' } } ) }}
                        <div class="invalid-feedback">
                          please provide message.
                        </div>
                      </div>
                    </div>
                   
            
                    <div class="form-group row">
                  <div class="col-sm-9">
                   {{ form_row(form.name, { 'attr': { 'placeholder': 'Name...' } } ) }}
                        <div class="invalid-feedback">
                          name is invalid. 
                        </div>
                      </div>
                    </div>
                   
                <div class="form-group mb-0 row">

                      <div class="col-sm-9">
                           {{ form_row(form.salary, { 'attr': { 'placeholder': 'Salary...' } } ) }}
                        <div class="invalid-feedback">
                          please provide message.
                        </div>
                      </div>
                    </div>
                     <div class="form-group row">
                   
                      <div class="col-sm-9">
                      {{ form_row(form.position, { 'attr': { 'placeholder': 'Position...' } } ) }}
                        <div class="valid-feedback">
                          done.
                        </div>
                      </div>
                    </div>
                  <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">Creer</button>
                  </div>
                
                </form>
                  {{ form_end(form) }}
              </div>
              
    </div>
  </div>
    </div>
{% endblock %}
